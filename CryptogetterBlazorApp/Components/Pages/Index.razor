@page "/"
@inject IJSRuntime JSRuntime

<h3>Тест событий</h3>

<button class="btn btn-primary" @onclick="TestClick">Нажми меня</button>

@if (!string.IsNullOrEmpty(Message))
{
    <div class="alert alert-info mt-3">@Message</div>
}

@code {
    private string Message { get; set; } = "";

    private async Task TestClick()
    {
        Message = "Кнопка нажата!";
        await JSRuntime.InvokeVoidAsync("console.log", "Тестовая кнопка сработала!");
        StateHasChanged();
    }

    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JSRuntime.InvokeVoidAsync("console.log", "Компонент инициализирован!");
        }
    }
}