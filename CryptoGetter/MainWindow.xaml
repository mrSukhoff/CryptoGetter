<Window x:Class="CryptoGetter.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CryptoGetter"
        mc:Ignorable="d"
        Title="MainWindow" Height="227.25" Width="545.75">
    <Grid Margin="0,0,13,5" Background="{DynamicResource {x:Static SystemColors.ActiveCaptionBrushKey}}">
        <Label Content="GTIN" HorizontalAlignment="Left" Margin="80,10,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.487,0.567" FontSize="14"/>
        <Label Content="Серийный номер" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" RenderTransformOrigin="-0.502,-0.15" FontSize="14"/>
        <TextBox x:Name="GtinBox" HorizontalAlignment="Left" Height="23" Margin="135,13,0,0" TextWrapping="Wrap" Text="04605310011256" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <TextBox x:Name="SerialBox" HorizontalAlignment="Left" Height="23" Margin="135,57,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="120"/>
        <Button x:Name="GetButton" Content="Получить данные" HorizontalAlignment="Left" Margin="296,13,0,0" VerticalAlignment="Top" Width="107" Height="67" Click="GetButton_Click"/>
        <Label Content="Результат" HorizontalAlignment="Left" Margin="54,120,0,0" VerticalAlignment="Top" FontSize="14"/>
        <Button x:Name="CopyButton" Content="Скопировать" HorizontalAlignment="Left" Margin="395,99,0,0" VerticalAlignment="Top" Width="108" Height="67"/>
        <TextBox x:Name="SerialBox_Copy" HorizontalAlignment="Left" Height="23" Margin="135,57,0,0" TextWrapping="Wrap" Text="1234567890123" VerticalAlignment="Top" Width="120" FontSize="14"/>
        <TextBox x:Name="ResultBox" HorizontalAlignment="Left" Height="67" Margin="135,99,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="239"/>

    </Grid>
</Window>
